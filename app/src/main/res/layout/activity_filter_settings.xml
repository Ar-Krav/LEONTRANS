<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="leontrans.leontranstm.basepart.filters.FilterSettingsActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/filter_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter 1"/>
    <Button
        android:id="@+id/filter_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter 2"/>
    <Button
        android:id="@+id/filter_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter 3"/>
    <Button
        android:id="@+id/filter_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter 4"/>
    <Button
        android:id="@+id/filter_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter 5"/>

</LinearLayout>