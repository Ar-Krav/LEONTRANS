<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:layout_margin="0dp"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="196dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color"
            app:srcCompat="@drawable/icon_car" />

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="50dp"
            android:layout_weight="0.14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date_from"
                android:layout_width="98dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:lineSpacingExtra="8sp"
                android:text="@string/date_from"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="78dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/white"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/date_to"
                android:layout_width="98dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/date_from"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="@string/date_to"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="82dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/trans_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/city_to_ru"
            android:layout_marginTop="8dp"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="trans_type "
            android:textColor="@color/dark"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/country_from_ru"
            app:layout_constraintTop_toBottomOf="@+id/country_to_ru" />

        <Button
            android:id="@+id/pay_type"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/trans_type"
            android:layout_marginTop="60dp"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="pay_type "
            android:textAllCaps="false"
            android:textColor="@color/dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/country_from_ru"
            app:layout_constraintTop_toBottomOf="@+id/country_to_ru" />

        <Button
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pay_type"
            android:layout_marginTop="32dp"
            android:background="@drawable/button"
            android:text="name"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/dark"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/country_from_ru"
            app:layout_constraintTop_toBottomOf="@+id/country_to_ru" />

        <Button
            android:id="@+id/goods"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="goods "
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/dark"
            app:layout_constraintRight_toLeftOf="@+id/country_from_ru"
            app:layout_constraintTop_toBottomOf="@+id/country_to_ru" />

        <Button
            android:textColor="@color/dark"
            android:id="@+id/country_from_ru"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="@string/country_from_ru"
            android:textSize="10sp"
            tools:layout_editor_absoluteX="163dp" />

        <Button
            android:id="@+id/city_from_ru"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/country_from_ru"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="@string/city_from_ru"
            android:textAllCaps="false"
            android:textColor="@color/dark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/city_to_ru"
            tools:layout_editor_absoluteY="159dp" />

        <Button
            android:id="@+id/country_to_ru"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_alignLeft="@+id/country_from_ru"
            android:layout_alignStart="@+id/country_from_ru"
            android:layout_below="@+id/city_from_ru"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="@string/country_to_ru"
            android:textColor="@color/dark"
            android:textSize="10sp"
            tools:layout_editor_absoluteY="176dp" />

        <Button
            android:id="@+id/city_to_ru"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/country_to_ru"
            android:background="@drawable/button"
            android:clickable="false"
            android:text="@string/city_to_ru"
            android:textColor="@color/dark"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="159dp" />

        <TextView
            android:id="@+id/telephone"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:lines="3"
            android:textColor="@color/dark"
            android:text="telephone"
            android:textAlignment="center" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>